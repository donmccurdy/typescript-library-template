{
	"compilerOptions": {
		"paths": {
			"my-package": ["./"]
		},
		"typeRoots": ["node_modules/@types"],
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"lib": ["es2022"],
		"target": "es2022",
		"isolatedModules": true,
		"isolatedDeclarations": true,
		"allowJs": false,
		"declaration": true,
		"stripInternal": true,
		"strict": true,
		"erasableSyntaxOnly": true,
		"verbatimModuleSyntax": true,
		"useDefineForClassFields": true
	}
}
