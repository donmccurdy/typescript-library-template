{
  "formatter": {
    "indentStyle": "tab",
    "indentWidth": 4,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/coverage/**",
      "!**/packages/**/*/dist/**",
      "!**/build",
      "!**/.svelte-kit"
    ]
  }
}
